# Writing Assistant - Environment Variables
# Copy this file to .env and update the values for your deployment

# Server Configuration
WRITING_ASSISTANT_HOST=0.0.0.0
WRITING_ASSISTANT_PORT=8001
WRITING_ASSISTANT_RELOAD=false

# Database Configuration
# Path to SQLite database file
WRITING_ASSISTANT_DB_PATH=/app/data/writing_assistant.db

# Security Configuration
# IMPORTANT: Change this to a strong random secret in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
WRITING_ASSISTANT_SECRET=CHANGE_THIS_IN_PRODUCTION_PLEASE

# AI Configuration (Optional)
# Uncomment and set these if using OpenAI
# OPENAI_API_KEY=sk-your-api-key-here

# Uncomment and set if using a custom Ollama server
# OLLAMA_BASE_URL=http://localhost:11434

# Custom Environment Variables Feature
# Set to true to allow users to configure environment variables via the UI
# Set to false for shared/production deployments for security
ALLOW_CUSTOM_ENV_VARS=true
